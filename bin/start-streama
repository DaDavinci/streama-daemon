#!/bin/bash
# Author: doOnline - D. van Dooijeweert
# Version: 1.0.4
# Website: https://www.doonline.nl

function _start()
{
	# Local variables
	local _load_env=$1;
	local _max_memory=$2;
	local _local_port=$3;
	
	# Go to library, so execution is done from that point in the filesystem.
	cd '/usr/local/lib/streama/' && \
	
	# Let the user know the program is starting
	echo -e "[streama-daemon] Starting background process..." >> '/usr/local/lib/streama/etc/daemon.log' && \
	echo -e "[streama-daemon] Use 'streama stop' to stop streama's daemon." >> '/usr/local/lib/streama/etc/daemon.log' && \
	echo -e "[streama-daemon] Use 'streama help' for more instructions." >> '/usr/local/lib/streama/etc/daemon.log' && \
	
	# Execute jar with java and make sure it won't respond to session exits and startups and save the output of the executable to a log file.
	nohup java -Xms128m -Xmx"$_max_memory" -Xnoclassgc -Dgrails.env="$_load_env" -Dserver.port="$_local_port" -jar '/usr/local/lib/streama/bin/streama.jar' > '/usr/local/lib/streama/etc/streama.log' 2>&1 &

	# Save the pid of this program to a file for later use in for example: shutdown of the program.
	echo $! > '/usr/local/lib/streama/etc/streama.pid' >> '/usr/local/lib/streama/etc/daemon.log' && \
	echo -e "[streama-daemon] Successfully started background process with pid: $!..." >> '/usr/local/lib/streama/etc/daemon.log' && \
	echo -e "[streama-daemon] Use 'streama read {process/daemon}' to see live streama's logs in the terminal." >> '/usr/local/lib/streama/etc/daemon.log';

	# Return results for checking if execution went right.
	return 0;
}

# Execute start function.
_start production 512m 8080;

# Check for errors during execution.
[ $? -ne 0 ] && echo -e "[streama-daemon] ERROR: Streama could not be started, please read the manual." >> '/usr/local/lib/streama/etc/daemon.log' && exit 1;

# Exit this bash script.
exit 0;
